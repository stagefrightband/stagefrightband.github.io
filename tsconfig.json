{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "outDir": "./dist" // Specify an output directory
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}